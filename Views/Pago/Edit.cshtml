@model AlvarezInmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Editar pago";
}

<div class="d-flex align-items-center justify-content-between">
	<h1>Editar pago</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@Html.HiddenFor(model => model.Id)
            <div class="form-group">
				<label asp-for="Fecha" class="control-label"></label>
				<input asp-for="Fecha" type="date" class="form-control"/>
				<span asp-validation-for="Fecha" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Importe" class="control-label"></label>
				<input asp-for="Importe" class="form-control"/>
				<span asp-validation-for="Importe" class="text-danger"></span>
			</div>
            <div class="form-group">
				<label asp-for="ContratoId" class="control-label"></label>
				<select name="ContratoId" class="form-control">
                    @foreach (var item in (IList<Contrato>)ViewBag.contratos)
                    {
                        @:<option @(item.Id == Model.ContratoId ? "selected" : "") value="@item.Id">@(item.Id)</option>
                    }
                </select>
				<span asp-validation-for="ContratoId" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
    			<a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-chevron-left"></i>Volver al listado</a>
    			<input type="submit" value="Editar" class="btn btn-primary" />
			</div>  
        </form>
    </div>
</div>