@model AlvarezInmobiliaria.Models.Pago
@{
    ViewData["Title"] = "Nuevo pago";
}

<h1>Nuevo pago</h1>
<div class="container">
    <div>
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroPago" class="control-label">NÂº</label>
                <input asp-for="NumeroPago" class="form-control" id="NumeroPago" disabled/>
                <span for="NumeroPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input type="date" asp-for="Fecha" class="form-control"/>
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input type="text" asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                <select class="form-control" name="ContratoId">
                    <option value="" selected disabled>Seleccione el contrato</option>
                    @if(ViewBag.contratos != null)
                    {
                        @foreach(var item in (IList<Contrato>)ViewBag.contratos)
                        {
                            <option value="@item.Id">@item.Id @item.Inmueble!.Direccion</option>
                        }
                    }
                </select>
            </div>
            <br>
            <div class="form-group">
				<a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-chevron-left"></i>Volver al listado</a>
				<button type="submit" class="btn btn-primary"><i class="ion-ios-checkmark"></i> Guardar</button>	
			</div>
        </form>
    </div>
</div>